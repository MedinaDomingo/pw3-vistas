                        alt="" />
                </div>
                <div class="p-6  bg-gradient-to-r from-gray-900 to-yellow-900">
                    <p class="text-base text-center font-bold text-neutral-200">
                        @Model[1].Nombre
                    </p>
                </div>
            </div>
 </div>


