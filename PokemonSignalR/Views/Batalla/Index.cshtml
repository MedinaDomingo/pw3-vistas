@{
    ViewBag.Title = "Batalla";

}
 <div class="flex justify-between flex-wrap m-auto">

    <div id="@Model[0].Nombre" onclick="seleccionarPokemon('@Model[0].Id', this)"
                class="pokemon-card min-w-[18rem] mx-auto">
                <h1 class="pl-10 pt-2 sm:pt-5 text-white sm:pl-80 text-xl pt-5 font-bold">Vida <span
                        class="text-xl text-red-600">@Model[0].Vida%</span></h1>
                <div class=" h-4 relative w-full rounded-full overflow-hidden">
                    <div class=" w-full h-full bg-amber-400 absolute "></div>
            <div class=" h-full bg-gray-600 sm:bg-indigo-500 absolute" style="width:@Model[0].Vida%"></div>
                </div>
                <div class="relative overflow-hidden flex h-[30rem]">
                    <img class="rounded-t-lg m-auto w-[20rem] transform -scale-x-100"
                 src="@Model[0].Imagen"
                        alt="" />
                </div>
                <div class="p-6 bg-gradient-to-r from-green-800 to-gray-900">
                    <p class="text-base text-center font-bold text-neutral-200">
                        @Model[0].Nombre
                    </p>
                </div>
                <div class="grid grid-rows-2 grid-cols-2 gap-4">
                    <a href="#"
                        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 block p-4 rounded-md text-white text-center">
                        Ataque1
                    </a>
                    <a href="#"
                        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 block p-4 rounded-md text-white text-center">
                        Ataque2
                    </a>
                    <a href="#"
                        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 block p-4 rounded-md text-white text-center">
                        Ataque3
                    </a>
                    <a href="#"
                        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 block p-4 rounded-md text-white text-center">
                        Ataque4
                    </a>
                </div>


            </div>

    <div id="@Model[1].Id" onclick="seleccionarPokemon('@Model[1].Id', this)"
                class="pokemon-card min-w-[18rem] mx-auto">
                <h1 class="pl-10 pt-2 sm:pt-5 text-white sm:pl-80 text-xl pt-5 font-bold">Vida <span
                        class="text-xl text-red-600">@Model[1].Vida%</span></h1>
                <div class=" h-4 relative w-full rounded-full overflow-hidden">
                    <div class=" w-full h-full bg-amber-400 absolute "></div>
            <div class=" h-full bg-gray-600 sm:bg-indigo-500 absolute" style="width:@Model[1].Vida%"></div>
                </div>
                <div class="relative overflow-hidden flex h-[30rem]">
                    <img class="rounded-t-lg m-auto w-[20rem]"
